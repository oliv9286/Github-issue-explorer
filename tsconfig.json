{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es5",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "jsx": "react",
    "rootDir": "./",
    "types": [
      "webpack-env",
      "node",
      "jest"
    ]
  },
  "include": [
    "./interfaces",
    "./src/index.tsx"
  ],
  "exclude": [
    "./node_modules"
  ]
}
